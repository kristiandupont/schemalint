{
  "name": "schemalint",
  "version": "0.5.10",
  "keywords": [
    "postgresql",
    "schema",
    "lint"
  ],
  "repository": "git@github.com:kristiandupont/schemalint.git",
  "license": "MIT",
  "author": {
    "name": "Kristian Dupont",
    "url": "http://www.kristiandupont.com"
  },
  "main": "build/engine.js",
  "types": "build/engine.d.ts",
  "bin": {
    "schemalint": "./bin/schemalint"
  },
  "files": [
    "build/",
    "bin/"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "yarn eslint . -f visualstudio --report-unused-disable-directives --ext .js,.ts",
    "run-example": "node build/src/cli -c ./example/.schemalintrc",
    "start-example-db": "docker run -d --name dvd-rental -p 54321:5432 kristiandupont/dvdrental-image",
    "stop-example-db": "docker stop dvd-rental",
    "test": "jest",
    "version": "yarn build"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    }
  },
  "dependencies": {
    "@kristiandupont/recase": "^1.1.1",
    "chalk": "4.1.2",
    "extract-pg-schema": "^3.1.7",
    "irregular-plurals": "^3.2.0",
    "optionator": "^0.9.1",
    "pg": "^8.3.3",
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@kristiandupont/eslint-config": "1.2.7",
    "@types/jest": "27.5.2",
    "@types/node": "18.11.9",
    "@types/ramda": "0.28.20",
    "eslint": "8.28.0",
    "jest": "26.6.3",
    "np": "7.6.2",
    "prettier": "2.7.1",
    "testcontainers": "9.0.0",
    "ts-jest": "26.5.6",
    "typescript": "4.8.4"
  },
  "np": {
    "tests": false
  }
}
